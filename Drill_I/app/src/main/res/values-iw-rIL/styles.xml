<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/asakim_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">100</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="secTitleStyle">
        <item name="fontFamily">@font/asakim_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/guardians_gold_dark</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


    <style name="mainTextStyle">
        <item name="fontFamily">@font/asakim_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textColor">@color/guardians_stone</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="lineSpacing">10dp</item>
    </style>

    <style name="thirdTitleStyle">
        <item name="fontFamily">@font/asakim_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textColor">@color/guardians_stone</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="lineSpacing">10dp</item>
    </style>

    <style name="paragraphStyle">
        <item name="fontFamily">@font/asakim_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/guardians_stone</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>


    <style name="backButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:text">@string/common_back_button</item>
        <item name="fontFamily">@font/asakim_bold</item>
        <item name="android:textColor">@color/guardians_gold_dark</item>
        <item name="strokeColor">@color/guardians_gold_dark</item>
        <item name="icon">@drawable/common_back_arrow</item>
        <item name="iconTint">@color/guardians_gold_dark</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="chooseTicketsButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:text">@string/movieInfo_goto_purchase_tickets</item>
        <item name="fontFamily">@font/asakim_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/guardians_gold_dark</item>
        <item name="icon">@drawable/common_tickets_icon_white</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="approveAndPayButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:text">@string/purchaseSummary_approveAndPay_btn</item>
        <item name="fontFamily">@font/asakim_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/guardians_gold</item>
        <item name="icon">@drawable/common_cart_icon_black</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="chooseDatesButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:text">@string/purchaseSummary_approveAndPay_btn</item>
        <item name="android:textColor">@color/guardians_gold_dark</item>
        <item name="strokeColor">@color/guardians_gold_dark</item>
        <item name="fontFamily">@font/asakim_bold</item>
        <item name="icon">@drawable/common_calendar_icon_colored</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="vipBadgeStyle">
        <item name="fontFamily">@font/asakim_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/guardians_gold</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
        <item name="lineSpacing">10dp</item>
        <item name="fabCradleRoundedCornerRadius">10dp</item>
    </style>


</resources>