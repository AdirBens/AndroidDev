<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/guardians</item>
        <item name="android:textSize">30sp</item>
<!--        <item name="android:textColor">@color/white</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">100</item>

        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="SeconderyTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/guardians</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/GuardiansGoldDark</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="MainTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="lineSpacing">10dp</item>
    </style>

    <style name="ParagraphTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">false</item>
        <item name="android:padding">10dp</item>
        <item name="lineSpacing">10dp</item>
    </style>

</resources>