<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"

    tools:context=".MovieInfo">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/info_banner"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/info_banner_shaded" />

        <TextView
            style="@style/TitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:layout_marginTop="-60dp"
            android:layout_marginBottom="15dp"

            android:text="@string/info_title"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/guardians_offic_poster"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/SeconderyTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/genre"
                    style="@style/MainTextStyle" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MainTextStyle"
                        android:text="@string/release_year" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MainTextStyle"
                        android:text="@string/parental" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MainTextStyle"
                        android:text="@string/movie_duration" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center_vertical|start"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/imdb_logo"
                        android:text="@string/imdb_rating_title" />

                    <LinearLayout
                        android:layout_gravity="center_horizontal|end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:layout_marginEnd="5dp"
                            style="@style/MainTextStyle"
                            android:text="@string/imdb_rating" />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/round_star_rate_24" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/ParagraphTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="@string/story_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tooltip_swipe_carousel"
            style="@style/ParagraphTextStyle"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:textColor="@color/grayedTextFont"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/image_carousel"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="135dp" />


        <Button
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/gotBuyTicketsBTN"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/buyTicketsBtn"
            android:backgroundTint="@color/GuardiansGoldDark"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ticket_icon_vec"
            android:layout_marginTop="20dp"
            android:padding="10dp" />
    </LinearLayout>

</FrameLayout>