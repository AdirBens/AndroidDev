<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenLoader">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loader_background"
        android:orientation="vertical"
        android:weightSum="11">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <ImageView
            android:id="@+id/loader_banner"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_margin="20dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/loader_banner"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center|bottom"
            style="@style/secTitleStyle"
            android:textColor="@color/guardians_gold"
            android:shadowRadius="30"
        android:text="@string/loader_author_name"/>
    </LinearLayout>
</FrameLayout>